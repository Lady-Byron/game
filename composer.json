{
  "name": "lady-byron/game",
  "description": "Embed local Twine/Ink games into Flarum at /play/{slug} with login gate.",
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.8"
  },
  "autoload": {
    "psr-4": {
      "LadyByron\\Game\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Flop Game",
      "category": "feature",
      "icon": {
        "name": "fas fa-gamepad"
        "backgroundColor": "#5B8C5A",
        "color": "#fff"
      }
    }
  }
}
